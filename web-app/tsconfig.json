{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Tämä korjaa ethereum-tyypin puuttumisen Vercel buildissä */
    "types": ["node", "react", "react-dom"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },

  /* Lisätään types-kansio includeen jotta Window.ethereum löytyy */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],

  "exclude": ["node_modules"]
}
